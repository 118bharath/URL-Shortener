<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %>

    <body class="flex flex-col min-h-screen">
        <%- include('partials/header') %>

            <main class="container mx-auto px-6 py-12 flex-1">
                <div class="flex flex-col md:flex-row justify-between items-center mb-12">
                    <div>
                        <h1 class="text-3xl font-bold text-white flex items-center gap-4 tracking-wider">
                            <span class="p-2 border border-neon-pink rounded text-neon-pink"><i
                                    class="ri-shield-user-line"></i></span>
                            ADMIN CONTROL
                        </h1>
                        <p class="text-gray-500 mt-2 font-mono text-sm ml-14">SYSTEM-WIDE SURVEILLANCE ACTIVE</p>
                    </div>

                    <div class="mt-6 md:mt-0 flex gap-4">
                        <div class="text-right">
                            <span class="block text-[10px] text-neon-blue uppercase tracking-widest font-bold">Total
                                Links</span>
                            <span class="text-4xl font-black text-white">
                                <%= urls.length %>
                            </span>
                        </div>
                    </div>
                </div>

                <% if (locals.urls && urls.length> 0) { %>
                    <div
                        class="border border-neon-pink/30 rounded-2xl overflow-hidden bg-dark shadow-[0_0_20px_rgba(255,0,153,0.1)]">
                        <div class="overflow-x-auto">
                            <table class="w-full text-left border-collapse">
                                <thead>
                                    <tr
                                        class="bg-neon-pink/10 border-b border-neon-pink/20 text-neon-pink text-xs uppercase tracking-widest font-bold">
                                        <th class="p-5">ID</th>
                                        <th class="p-5">Vector</th>
                                        <th class="p-5">Short Code</th>
                                        <th class="p-5 text-center">Traffic</th>
                                        <th class="p-5">Operator ID</th>
                                        <th class="p-5 text-center">Term</th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-gray-800 font-mono text-sm">
                                    <% urls.forEach((url, index)=> { %>
                                        <tr class="hover:bg-white/5 transition duration-150 group">
                                            <td class="p-5 text-gray-600">
                                                <%= index + 1 %>
                                            </td>
                                            <td class="p-5 text-white max-w-xs truncate" title="<%= url.redirectURL %>">
                                                <%= url.redirectURL %>
                                            </td>
                                            <td class="p-5">
                                                <div class="flex items-center gap-2">
                                                    <a href="http://localhost:3001/url/<%= url.shortId %>"
                                                        target="_blank" class="text-neon-blue hover:text-white">
                                                        http://shortio/<%= url.shortId %>
                                                    </a>
                                                    <button
                                                        onclick="navigator.clipboard.writeText('http://shortio/<%= url.shortId %>')"
                                                        class="text-gray-500 hover:text-white transition-colors p-1 opacity-100 md:opacity-0 group-hover:opacity-100"
                                                        title="Copy Link">
                                                        <i class="ri-file-copy-line"></i>
                                                    </button>
                                                </div>
                                            </td>
                                            <td class="p-5 text-center font-bold text-white">
                                                <%= url.visitHistory.length %>
                                            </td>
                                            <td class="p-5 text-xs text-gray-500">
                                                <%= url.createdBy %>
                                            </td>
                                            <td class="p-5 text-center">
                                                <button onclick="deleteUrl('<%= url._id %>')"
                                                    class="text-red-500 hover:text-white hover:bg-red-500 p-2 rounded transition-colors">
                                                    <i class="ri-delete-bin-line"></i>
                                                </button>
                                            </td>
                                        </tr>
                                        <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <% } else { %>
                        <div
                            class="flex flex-col items-center justify-center py-32 border border-dashed border-gray-800 rounded-2xl opacity-50">
                            <i class="ri-database-2-line text-6xl text-gray-600 mb-4"></i>
                            <p class="text-gray-400 font-mono">DATABASE EMPTY</p>
                        </div>
                        <% } %>
            </main>

            <%- include('partials/footer') %>

                <script>
                    async function deleteUrl(id) {
                        if (!confirm('WARNING: PERMANENT DATA LOSS. CONFIRM?')) return;
                        try {
                            const res = await fetch(`/url/${id}`, { method: 'DELETE' });
                            if (res.ok) window.location.reload();
                            else alert('ERROR: ACTION BLOCKED');
                        } catch (err) { console.error(err); }
                    }
                </script>
    </body>

</html>